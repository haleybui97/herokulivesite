<% include ../partials/header.ejs %>
    <!-- Content for the Add_Edit page -->
    <section class="bodySection">
        <div class="container">
            <div class="row">
                <div class="offset-md-3 col-md-6">
                    <h1>
                        <%= title %>
                    </h1>

                    <form class="form" method="POST">
                        <div class="form-group">
                            <input type="hidden" name="id" value="<%= item._id %>">
                            <label for="contactNameTextField">Contact Name</label>
                            <!-- name = contactName. by useing this, I will get value from the controller using the request -->
                            <input type="text" class="form-control" id="contactNameTextField" placeholder="Enter the contact name" name="contactName" value="<%= item.contactName %>" required>
                        </div>
                        <br />
                        <div class="form-group">
                            <label for="contactNumberTextField">Contact Number</label>
                            <input type="number" class="form-control" id="contactNumberTextField" placeholder="***-***-****" name="contactNumber" value="<%= item.contactNumber %>" required>
                        </div>
                        <br />
                        <div class="form-group">
                            <label for="emailAddressTextField">Email Address</label>
                            <input type="text" class="form-control" id="emailAddressTextField" placeholder="Enter the email addresss" name="emailAddress" value="<%= item.emailAddress %>">
                        </div>
                        <br />

                        <button class="btn btn-primary" type="submit">
                        <i class="fas fa-edit"></i> 
                        Submit
                        </button>
                        <a href="/businessList/businessContactList" class="btn btn-warning">
                            <i class="fas fa-undo"></i> Cancel
                        </a>

                    </form>
                </div>

            </div>
        </div>
    </section>
    <% include ../partials/footer.ejs %>